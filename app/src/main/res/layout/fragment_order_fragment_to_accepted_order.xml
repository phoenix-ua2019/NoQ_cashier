<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ua.lviv.iot.phoenix.noq_cashier.fragments.OrderFragmentToAcceptedOrderFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/t5"
            android:layout_width="164dp"
            android:layout_height="28dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Ім'я Клієнта"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/t5"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/user_name_in_OFAO"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_toRightOf="@+id/t5"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/t4"
            android:layout_width="164dp"
            android:layout_height="28dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Номер замовлення"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/t4"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/order_number_in_OFAO"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_toRightOf="@+id/t4"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="18sp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_order_meals_AO"
        android:layout_width="match_parent"
        android:layout_height="324dp"
        android:layout_weight="3"
        android:scrollbars="vertical" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:layout_weight="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="72dp"
                    android:layout_height="28dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Ціна"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/t2"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/selected_price_AO"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_toRightOf="@+id/t2"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="164dp"
                    android:layout_height="28dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Час замовлення"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/t3"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/selected_time_show_AO"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_toRightOf="@+id/t3"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp" />
            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
