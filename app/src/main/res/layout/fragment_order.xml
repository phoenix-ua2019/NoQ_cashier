<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

    <TextView
        android:id="@+id/t5"
        android:layout_width="164dp"
        android:layout_height="28dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Ім'я Клієнта"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/t5"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/user_name_in_FO"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_toRightOf="@+id/t5"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/t4"
            android:layout_width="164dp"
            android:layout_height="28dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Номер замовлення"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/t4"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/order_number_in_FO"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_toRightOf="@+id/t4"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="18sp" />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_order_meals"
        android:layout_width="match_parent"
        android:layout_height="324dp"
        android:layout_weight="3"
        android:scrollbars="vertical" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="72dp"
                    android:layout_height="28dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Ціна"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/t2"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/selected_price"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_toRightOf="@+id/t2"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="164dp"
                    android:layout_height="28dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Час замовлення"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/t3"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/selected_time_show"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_toRightOf="@+id/t3"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp" />
            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <Button
            android:id="@+id/accept_order"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:background="@drawable/button_yes_style"
            android:text="Підтвердити"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/reject_order"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/accept_order"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:background="@drawable/button_style"
            android:text="Відхилити"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </RelativeLayout>


</LinearLayout>